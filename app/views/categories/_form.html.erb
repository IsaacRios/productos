	<% name ||= "Nueva" %>
	<h2><%= name%> Categor√≠a </h2>
	<%= form_for (@category) do |f| %>
		<% if @category.errors.full_messages.length > 0 %>
			<div class="alert alert-dimissible alert-danger">
				<button type='button' class='close' data-dismiss='alert'>x</button>
				<% @category.errors.full_messages.each do |messages| %>
					<h5><%= messages %></h5>
				<%end%>
			</div>
		<%end%>
	<div>
		<%= f.text_field :name, placeholder: "Nombre", class:"form-control"%>
	</div>
	<div>
		<%= f.text_area :description, placeholder: "Escribe aqui la description", style: "height:250px", class:"form-control" %>
	</div>
	<div>
		<%= link_to "Regresar", categories_path, class:"btn btn-default"%>
		<%= f.submit "Guardar", class:"btn-btn-info"%>
	</div>
	<%end%>